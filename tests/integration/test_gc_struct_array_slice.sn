# Test: Slice a struct array and verify callbacks survive on the sliced result

@alias "rt_arena_v2_gc"
native fn gc_collect(arena): int

struct Entry =>
    key: str
    value: str

fn buildAndSlice(): Entry[] =>
    var items: Entry[] = {}
    items.push(Entry { key: "a", value: "1" })
    items.push(Entry { key: "b", value: "2" })
    items.push(Entry { key: "c", value: "3" })
    items.push(Entry { key: "d", value: "4" })
    var sliced: Entry[] = items[1..3]
    return sliced

fn main(): void =>
    var items: Entry[] = buildAndSlice()
    gc_collect()

    if items.length != 2 =>
        print($"FAIL: length {items.length}\n")
        return
    if items[0].key != "b" || items[0].value != "2" =>
        print("FAIL: item 0\n")
        return
    if items[1].key != "c" || items[1].value != "3" =>
        print("FAIL: item 1\n")
        return
    print("PASS\n")
