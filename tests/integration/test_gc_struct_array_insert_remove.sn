# Test: Insert and remove on struct arrays, verify callbacks survive

@alias "rt_arena_v2_gc"
native fn gc_collect(arena): int

struct Entry =>
    key: str
    value: str

fn buildModified(): Entry[] =>
    var items: Entry[] = { Entry { key: "a", value: "1" }, Entry { key: "c", value: "3" } }
    # Insert "b" at index 1
    items.insert(Entry { key: "b", value: "2" }, 1)
    # Remove "a" at index 0
    items.remove(0)
    return items

fn main(): void =>
    var items: Entry[] = buildModified()
    gc_collect()

    if items.length != 2 =>
        print($"FAIL: length {items.length}\n")
        return
    if items[0].key != "b" || items[0].value != "2" =>
        print("FAIL: item 0\n")
        return
    if items[1].key != "c" || items[1].value != "3" =>
        print("FAIL: item 1\n")
        return
    print("PASS\n")
