// Test 91: Byte type operations
// Tests byte type (0-255 range)

fn main(): int =>
    print("Test byte basics:\n\n")

    // Test 1: Byte literal values
    print("Test 1 - Byte literals:\n")
    var a: byte = 0
    var b: byte = 127
    var c: byte = 255
    print($"  min byte: {a}\n")
    print($"  mid byte: {b}\n")
    print($"  max byte: {c}\n")

    // Test 2: Byte arithmetic
    print("\nTest 2 - Byte arithmetic:\n")
    var x: byte = 100
    var y: byte = 50
    var sum: int = x + y
    var diff: int = x - y
    var prod: int = x * y
    var quot: int = x / y
    print($"  {x} + {y} = {sum}\n")
    print($"  {x} - {y} = {diff}\n")
    print($"  {x} * {y} = {prod}\n")
    print($"  {x} / {y} = {quot}\n")

    // Test 3: Byte to int conversion
    print("\nTest 3 - Byte to int:\n")
    var byte_val: byte = 200
    var int_val: int = byte_val
    print($"  byte {byte_val} as int: {int_val}\n")

    // Test 4: Byte comparison
    print("\nTest 4 - Byte comparison:\n")
    var p: byte = 100
    var q: byte = 150
    if p < q =>
        print("  p < q: true\n")
    if p == 100 =>
        print("  p == 100: true\n")

    // Test 5: Byte modulo
    print("\nTest 5 - Byte modulo:\n")
    var m: byte = 17
    var n: byte = 5
    var mod: int = m % n
    print($"  17 %% 5 = {mod}\n")

    // Test 6: Byte in loop
    print("\nTest 6 - Byte in loop:\n")
    var total: int = 0
    var i: byte = 1
    while i <= 5 =>
        total = total + i
        i = i + 1
    print($"  Sum 1-5: {total}\n")

    print("\nAll byte basic tests passed!\n")
    return 0
