// Comprehensive test for int type (64-bit signed integer)
// Tests all expression contexts: literals, interpolation, arithmetic,
// comparisons, arrays, any boxing/unboxing, lambdas, functions

fn main(): void =>
    print("=== int Comprehensive Type Test ===\n\n")

    test_literals()
    test_string_interpolation()
    test_arithmetic()
    test_comparisons()
    test_unary()
    test_compound_expressions()
    test_arrays()
    test_array_equality()
    test_2d_arrays()
    test_any_boxing()
    test_any_unboxing()
    test_type_checking()
    test_lambdas()
    test_functions()
    test_control_flow()
    test_edge_cases()

    print("\n=== All int tests passed! ===\n")

// --- 1. Literals and Variables ---
fn test_literals(): void =>
    print("1. Literals and variables\n")

    var x: int = 42
    assert(x == 42, "basic literal")

    var y: int = -100
    assert(y == -100, "negative literal")

    var z: int = 0
    assert(z == 0, "zero literal")

    var large: int = 9223372036854775807
    assert(large > 0, "max int")

    var min: int = -9223372036854775808
    assert(min < 0, "min int")

    print("   PASS\n")

// --- 2. String Interpolation ---
fn test_string_interpolation(): void =>
    print("2. String interpolation\n")

    var x: int = 42
    var s1: str = $"Value: {x}"
    assert(s1 == "Value: 42", "basic interpolation")

    var y: int = -100
    var s2: str = $"Negative: {y}"
    assert(s2 == "Negative: -100", "negative interpolation")

    // Expression in interpolation
    var a: int = 10
    var b: int = 5
    var s3: str = $"Sum: {a + b}"
    assert(s3 == "Sum: 15", "expression in interpolation")

    var s4: str = $"Product: {a * b}"
    assert(s4 == "Product: 50", "multiplication in interpolation")

    // Multiple values
    var s5: str = $"{a} + {b} = {a + b}"
    assert(s5 == "10 + 5 = 15", "multiple interpolations")

    print("   PASS\n")

// --- 3. Arithmetic Operations ---
fn test_arithmetic(): void =>
    print("3. Arithmetic operations\n")

    var a: int = 100
    var b: int = 30

    // Addition
    var sum: int = a + b
    assert(sum == 130, "addition")

    // Subtraction
    var diff: int = a - b
    assert(diff == 70, "subtraction")

    // Multiplication
    var prod: int = a * b
    assert(prod == 3000, "multiplication")

    // Division
    var quot: int = a / b
    assert(quot == 3, "division")

    // Modulo
    var rem: int = a % b
    assert(rem == 10, "modulo")

    // Chained operations
    var chain: int = a + b - 10
    assert(chain == 120, "chained add/sub")

    print("   PASS\n")

// --- 4. Comparison Operations ---
fn test_comparisons(): void =>
    print("4. Comparison operations\n")

    var a: int = 50
    var b: int = 30
    var c: int = 50

    assert(a == c, "equality true")
    assert(!(a == b), "equality false")

    assert(a != b, "not equal true")
    assert(!(a != c), "not equal false")

    assert(a > b, "greater than true")
    assert(!(b > a), "greater than false")

    assert(b < a, "less than true")
    assert(!(a < b), "less than false")

    assert(a >= c, "gte equal")
    assert(a >= b, "gte greater")
    assert(!(b >= a), "gte false")

    assert(b <= a, "lte less")
    assert(a <= c, "lte equal")
    assert(!(a <= b), "lte false")

    print("   PASS\n")

// --- 5. Unary Operations ---
fn test_unary(): void =>
    print("5. Unary operations\n")

    var x: int = 42
    var neg: int = -x
    assert(neg == -42, "negation")

    var y: int = -100
    var pos: int = -y
    assert(pos == 100, "double negation")

    print("   PASS\n")

// --- 6. Compound Expressions ---
fn test_compound_expressions(): void =>
    print("6. Compound expressions\n")

    var a: int = 10
    var b: int = 5
    var c: int = 3

    // Parenthesized expressions
    var r1: int = (a + b) * c
    assert(r1 == 45, "parenthesized multiply")

    var r2: int = a * (b + c)
    assert(r2 == 80, "parenthesized add")

    // Nested expressions
    var r3: int = (a + b) * (c + 2)
    assert(r3 == 75, "nested parentheses")

    // Complex expression
    var r4: int = a * b + c * 2
    assert(r4 == 56, "complex expression")

    print("   PASS\n")

// --- 7. Arrays ---
fn test_arrays(): void =>
    print("7. Arrays\n")

    // Array literal
    var arr: int[] = {10, 20, 30, 40, 50}
    assert(arr.length == 5, "array length")

    // Indexing
    assert(arr[0] == 10, "index 0")
    assert(arr[2] == 30, "index 2")
    assert(arr[4] == 50, "index 4")

    // Negative indexing
    assert(arr[-1] == 50, "negative index -1")
    assert(arr[-2] == 40, "negative index -2")

    // Array with expressions
    var x: int = 5
    var arr2: int[] = {x, x + 1, x * 2, x - 1}
    assert(arr2[0] == 5, "expr in array 0")
    assert(arr2[1] == 6, "expr in array 1")
    assert(arr2[2] == 10, "expr in array 2")
    assert(arr2[3] == 4, "expr in array 3")

    // Slicing
    var slice: int[] = arr[1..3]
    assert(slice.length == 2, "slice length")
    assert(slice[0] == 20, "slice[0]")
    assert(slice[1] == 30, "slice[1]")

    // Empty array
    var empty: int[] = {}
    assert(empty.length == 0, "empty array")

    print("   PASS\n")

// --- 8. Array Equality ---
fn test_array_equality(): void =>
    print("8. Array equality\n")

    var a: int[] = {1, 2, 3, 4, 5}
    var b: int[] = {1, 2, 3, 4, 5}
    var c: int[] = {1, 2, 3, 4, 6}
    var d: int[] = {1, 2, 3}

    assert(a == b, "equal arrays")
    assert(!(a == c), "different last element")
    assert(!(a == d), "different lengths")

    assert(a != c, "not equal different element")
    assert(a != d, "not equal different length")
    assert(!(a != b), "not not equal")

    // Empty arrays
    var e1: int[] = {}
    var e2: int[] = {}
    assert(e1 == e2, "empty arrays equal")

    print("   PASS\n")

// --- 9. 2D Arrays ---
fn test_2d_arrays(): void =>
    print("9. 2D arrays\n")

    var matrix: int[][] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}}

    assert(matrix.length == 3, "2d rows")
    assert(matrix[0].length == 3, "2d cols")

    assert(matrix[0][0] == 1, "element [0][0]")
    assert(matrix[1][1] == 5, "element [1][1]")
    assert(matrix[2][2] == 9, "element [2][2]")

    // Row access
    var row: int[] = matrix[1]
    assert(row[0] == 4, "row access")

    print("   PASS\n")

// --- 10. Any Boxing ---
fn test_any_boxing(): void =>
    print("10. Any boxing\n")

    var x: int = 42
    var a: any = x
    assert(a is int, "boxed type check")

    var y: int = -100
    var b: any = y
    assert(b is int, "boxed negative type check")

    // Boxing array
    var arr: int[] = {1, 2, 3}
    var c: any = arr
    assert(c is int[], "boxed array type check")

    print("   PASS\n")

// --- 11. Any Unboxing ---
fn test_any_unboxing(): void =>
    print("11. Any unboxing\n")

    var x: int = 42
    var a: any = x
    var unboxed: int = a as int
    assert(unboxed == 42, "unboxed value")

    var y: int = -100
    var b: any = y
    var unboxed2: int = b as int
    assert(unboxed2 == -100, "unboxed negative")

    // Unbox array
    var arr: int[] = {10, 20, 30}
    var c: any = arr
    var unboxedArr: int[] = c as int[]
    assert(unboxedArr.length == 3, "unboxed array length")
    assert(unboxedArr[0] == 10, "unboxed array element")

    print("   PASS\n")

// --- 12. Type Checking ---
fn test_type_checking(): void =>
    print("12. Type checking with 'is'\n")

    var x: int = 42
    var a: any = x

    assert(a is int, "is int true")
    assert(!(a is double), "is double false")
    assert(!(a is str), "is str false")
    assert(!(a is bool), "is bool false")

    // Array type checking
    var arr: int[] = {1, 2, 3}
    var b: any = arr
    assert(b is int[], "is int[] true")
    assert(!(b is char[]), "is char[] false")
    assert(!(b is str[]), "is str[] false")

    print("   PASS\n")

// --- 13. Lambdas ---
fn test_lambdas(): void =>
    print("13. Lambdas\n")

    // Lambda with int parameter
    var double_it: fn(int): int = fn(x: int): int => x * 2
    assert(double_it(21) == 42, "lambda call")

    // Lambda with int return
    var get_value: fn(): int = fn(): int => 100
    assert(get_value() == 100, "lambda return")

    // Lambda with expression
    var add: fn(int, int): int = fn(a: int, b: int): int => a + b
    assert(add(10, 32) == 42, "lambda with two params")

    // Lambda capturing int
    var base: int = 10
    var add_base: fn(int): int = fn(x: int): int => x + base
    assert(add_base(5) == 15, "lambda capture")

    // Higher-order lambda with int
    var int_double: fn(int): int = fn(n: int): int => n * 2
    var apply: fn(fn(int): int, int): int = fn(f: fn(int): int, x: int): int => f(x)
    assert(apply(int_double, 21) == 42, "higher-order lambda")

    print("   PASS\n")

// --- 14. Functions ---
fn test_functions(): void =>
    print("14. Functions\n")

    assert(identity_int(42) == 42, "identity function")
    assert(add_int(10, 32) == 42, "add function")
    assert(multiply_int(6, 7) == 42, "multiply function")
    assert(negate_int(42) == -42, "negate function")

    // Function returning expression
    assert(compute_int(10, 5, 2) == 30, "complex function")

    print("   PASS\n")

fn identity_int(x: int): int =>
    return x
fn add_int(a: int, b: int): int =>
    return a + b
fn multiply_int(a: int, b: int): int =>
    return a * b
fn negate_int(x: int): int =>
    return -x
fn compute_int(a: int, b: int, c: int): int =>
    return (a + b) * c

// --- 15. Control Flow ---
fn test_control_flow(): void =>
    print("15. Control flow\n")

    // If with int comparison
    var x: int = 50
    var result: int = 0
    if x > 40 =>
        result = 1
    else =>
        result = 0
    assert(result == 1, "if comparison")

    // While with int counter
    var count: int = 0
    var sum: int = 0
    while count < 5 =>
        sum = sum + count
        count = count + 1
    assert(sum == 10, "while loop") // 0+1+2+3+4=10

    // For loop with int
    var total: int = 0
    var arr: int[] = {1, 2, 3, 4, 5}
    for v in arr =>
        total = total + v
    assert(total == 15, "for loop")

    print("   PASS\n")

// --- 16. Edge Cases ---
fn test_edge_cases(): void =>
    print("16. Edge cases\n")

    // Zero operations
    var zero: int = 0
    assert(zero + zero == 0, "zero + zero")
    assert(zero * 100 == 0, "zero * n")

    // Division edge cases
    var hundred: int = 100
    assert(hundred / 100 == 1, "n / n")
    assert(hundred % 100 == 0, "n % n")

    // Large values
    var large: int = 1000000000
    var result: int = large * 2
    assert(result == 2000000000, "large multiplication")

    // Sign changes
    var pos: int = 50
    var neg: int = -50
    assert(pos + neg == 0, "pos + neg = 0")
    assert(pos * neg == -2500, "pos * neg")
    assert(neg * neg == 2500, "neg * neg")

    print("   PASS\n")
