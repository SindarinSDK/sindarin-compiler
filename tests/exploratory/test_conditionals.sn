// Test 14: Conditionals - if/else
fn main(): int =>
    print("=== Basic If ===\n")
    var x: int = 10
    if x > 5 =>
        print("x > 5 is true\n")

    if x < 5 =>
        print("Should not print\n")

    print("\n=== If-Else ===\n")
    var y: int = 3
    if y > 5 =>
        print("y > 5\n")
    else =>
        print("y <= 5\n")

    print("\n=== Multiple If-Else ===\n")
    var score: int = 75
    if score >= 90 =>
        print("Grade: A\n")
    else =>
        if score >= 80 =>
            print("Grade: B\n")
        else =>
            if score >= 70 =>
                print("Grade: C\n")
            else =>
                if score >= 60 =>
                    print("Grade: D\n")
                else =>
                    print("Grade: F\n")

    print("\n=== Comparison Operators ===\n")
    var a: int = 10
    var b: int = 20
    if a == 10 =>
        print("a == 10\n")
    if a != b =>
        print("a != b\n")
    if a < b =>
        print("a < b\n")
    if b > a =>
        print("b > a\n")
    if a <= 10 =>
        print("a <= 10\n")
    if b >= 20 =>
        print("b >= 20\n")

    print("\n=== Logical AND ===\n")
    if a > 5 && b > 15 =>
        print("Both conditions true\n")
    if a > 5 && b > 25 =>
        print("Should not print\n")

    print("\n=== Logical OR ===\n")
    if a > 15 || b > 15 =>
        print("At least one true\n")
    if a > 15 || b > 25 =>
        print("Should not print\n")

    print("\n=== NOT Operator ===\n")
    var flag: bool = false
    if !flag =>
        print("!false is true\n")
    if !!true =>
        print("!!true is true\n")

    print("\n=== Complex Boolean ===\n")
    var p: bool = true
    var q: bool = false
    var r: bool = true

    if p && (q || r) =>
        print("p && (q || r) is true\n")
    if (p && q) || r =>
        print("(p && q) || r is true\n")
    if !(p && q) =>
        print("!(p && q) is true\n")

    print("\n=== Nested If ===\n")
    var level: int = 3
    var access: bool = true
    if access =>
        print("Access granted\n")
        if level >= 3 =>
            print("Admin level\n")
        else =>
            print("User level\n")

    print("\n=== If with Different Types ===\n")
    var s1: str = "hello"
    var s2: str = "hello"
    if s1 == s2 =>
        print("Strings equal\n")

    var d1: double = 3.14
    if d1 > 3.0 =>
        print("Double comparison works\n")

    var c1: char = 'A'
    if c1 == 'A' =>
        print("Char comparison works\n")

    return 0
