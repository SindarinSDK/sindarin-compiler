// Test 09: Increment and decrement operators
fn main(): int =>
    // Basic increment
    var x: int = 5
    print($"x = {x}\n")
    x++
    print($"after x++: {x}\n")
    x++
    print($"after x++ again: {x}\n")

    // Basic decrement
    var y: int = 10
    print($"y = {y}\n")
    y--
    print($"after y--: {y}\n")
    y--
    print($"after y-- again: {y}\n")

    // In loops
    print("\nLoop with ++:\n")
    for var i: int = 0; i < 5; i++ =>
        print($"  i = {i}\n")

    print("\nLoop with --:\n")
    for var j: int = 5; j > 0; j-- =>
        print($"  j = {j}\n")

    // Multiple increments in sequence
    var z: int = 0
    z++
    z++
    z++
    print($"z after 3 increments: {z}\n")

    // Increment/decrement on negative numbers
    var neg: int = -5
    neg++
    print($"-5 after ++: {neg}\n")
    neg--
    print($"then after --: {neg}\n")

    // In while loop
    var count: int = 3
    while count > 0 =>
        print($"countdown: {count}\n")
        count--

    return 0
