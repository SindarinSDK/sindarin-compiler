// Comprehensive test for int32 type
// Tests all expression contexts: literals, interpolation, arithmetic,
// comparisons, arrays, any boxing/unboxing, lambdas, functions

fn main(): void =>
    print("=== int32 Comprehensive Type Test ===\n\n")

    test_literals()
    test_string_interpolation()
    test_arithmetic()
    test_comparisons()
    test_unary()
    test_compound_expressions()
    test_arrays()
    test_array_equality()
    test_2d_arrays()
    test_any_boxing()
    test_any_unboxing()
    test_type_checking()
    test_lambdas()
    test_functions()
    test_control_flow()
    test_edge_cases()

    print("\n=== All int32 tests passed! ===\n")

// --- 1. Literals and Variables ---
fn test_literals(): void =>
    print("1. Literals and variables\n")

    var x: int32 = 42
    assert(x == 42, "basic literal")

    var y: int32 = -100
    assert(y == -100, "negative literal")

    var z: int32 = 0
    assert(z == 0, "zero literal")

    var max: int32 = 2147483647
    assert(max == 2147483647, "max int32")

    var min: int32 = -2147483648
    assert(min == -2147483648, "min int32")

    print("   PASS\n")

// --- 2. String Interpolation ---
fn test_string_interpolation(): void =>
    print("2. String interpolation\n")

    var x: int32 = 42
    var s1: str = $"Value: {x}"
    assert(s1 == "Value: 42", "basic interpolation")

    var y: int32 = -100
    var s2: str = $"Negative: {y}"
    assert(s2 == "Negative: -100", "negative interpolation")

    // Expression in interpolation
    var a: int32 = 10
    var b: int32 = 5
    var s3: str = $"Sum: {a + b}"
    assert(s3 == "Sum: 15", "expression in interpolation")

    var s4: str = $"Product: {a * b}"
    assert(s4 == "Product: 50", "multiplication in interpolation")

    // Multiple values
    var s5: str = $"{a} + {b} = {a + b}"
    assert(s5 == "10 + 5 = 15", "multiple interpolations")

    print("   PASS\n")

// --- 3. Arithmetic Operations ---
fn test_arithmetic(): void =>
    print("3. Arithmetic operations\n")

    var a: int32 = 100
    var b: int32 = 30

    // Addition
    var sum: int32 = a + b
    assert(sum == 130, "addition")

    // Subtraction
    var diff: int32 = a - b
    assert(diff == 70, "subtraction")

    // Multiplication
    var prod: int32 = a * b
    assert(prod == 3000, "multiplication")

    // Division
    var quot: int32 = a / b
    assert(quot == 3, "division")

    // Modulo
    var rem: int32 = a % b
    assert(rem == 10, "modulo")

    // Chained operations
    var chain: int32 = a + b - 10
    assert(chain == 120, "chained add/sub")

    print("   PASS\n")

// --- 4. Comparison Operations ---
fn test_comparisons(): void =>
    print("4. Comparison operations\n")

    var a: int32 = 50
    var b: int32 = 30
    var c: int32 = 50

    assert(a == c, "equality true")
    assert(!(a == b), "equality false")

    assert(a != b, "not equal true")
    assert(!(a != c), "not equal false")

    assert(a > b, "greater than true")
    assert(!(b > a), "greater than false")

    assert(b < a, "less than true")
    assert(!(a < b), "less than false")

    assert(a >= c, "gte equal")
    assert(a >= b, "gte greater")
    assert(!(b >= a), "gte false")

    assert(b <= a, "lte less")
    assert(a <= c, "lte equal")
    assert(!(a <= b), "lte false")

    print("   PASS\n")

// --- 5. Unary Operations ---
fn test_unary(): void =>
    print("5. Unary operations\n")

    var x: int32 = 42
    var neg: int32 = -x
    assert(neg == -42, "negation")

    var y: int32 = -100
    var pos: int32 = -y
    assert(pos == 100, "double negation")

    print("   PASS\n")

// --- 6. Compound Expressions ---
fn test_compound_expressions(): void =>
    print("6. Compound expressions\n")

    var a: int32 = 10
    var b: int32 = 5
    var c: int32 = 3

    // Parenthesized expressions
    var r1: int32 = (a + b) * c
    assert(r1 == 45, "parenthesized multiply")

    var r2: int32 = a * (b + c)
    assert(r2 == 80, "parenthesized add")

    // Nested expressions
    var r3: int32 = (a + b) * (c + 2)
    assert(r3 == 75, "nested parentheses")

    // Complex expression
    var r4: int32 = a * b + c * 2
    assert(r4 == 56, "complex expression")

    print("   PASS\n")

// --- 7. Arrays ---
fn test_arrays(): void =>
    print("7. Arrays\n")

    // Array creation
    var arr: int32[] = {1, 2, 3, 4, 5}
    assert(arr.length == 5, "array length")
    assert(arr[0] == 1, "array index 0")
    assert(arr[4] == 5, "array index 4")

    // Array push
    arr.push(6)
    assert(arr.length == 6, "push length")
    assert(arr[5] == 6, "push value")

    // Array pop
    var popped: int32 = arr.pop()
    assert(popped == 6, "pop value")
    assert(arr.length == 5, "pop length")

    // Array slicing
    var slice: int32[] = arr[1..4]
    assert(slice.length == 3, "slice length")
    assert(slice[0] == 2, "slice first")
    assert(slice[2] == 4, "slice last")

    // Array contains
    assert(arr.contains(3), "contains existing")
    assert(!arr.contains(100), "contains missing")

    // Array indexOf
    assert(arr.indexOf(3) == 2, "indexOf existing")
    assert(arr.indexOf(100) == -1, "indexOf missing")

    print("   PASS\n")

// --- 8. Array Equality ---
fn test_array_equality(): void =>
    print("8. Array equality\n")

    var a: int32[] = {1, 2, 3}
    var b: int32[] = {1, 2, 3}
    var c: int32[] = {1, 2, 4}

    assert(a == b, "equal arrays")
    assert(a != c, "unequal arrays")

    print("   PASS\n")

// --- 9. 2D Arrays ---
fn test_2d_arrays(): void =>
    print("9. 2D arrays\n")

    var arr: int32[][] = {{1, 2}, {3, 4}, {5, 6}}
    assert(arr.length == 3, "2D outer length")
    assert(arr[0].length == 2, "2D inner length")
    assert(arr[1][1] == 4, "2D access")

    print("   PASS\n")

// --- 10. Any Boxing ---
fn test_any_boxing(): void =>
    print("10. Any boxing\n")

    var x: int32 = 42
    var a: any = x
    assert(a is int32, "boxed type check")

    var y: int32 = -100
    var b: any = y
    assert(b is int32, "boxed negative type check")

    // Array boxing
    var arr: int32[] = {10, 20, 30}
    var boxed_arr: any = arr
    assert(boxed_arr is int32[], "array boxing type check")

    print("   PASS\n")

// --- 11. Any Unboxing ---
fn test_any_unboxing(): void =>
    print("11. Any unboxing\n")

    var x: int32 = 42
    var a: any = x
    var unboxed: int32 = a as int32
    assert(unboxed == 42, "unboxed value")

    var y: int32 = -100
    var b: any = y
    var unboxed2: int32 = b as int32
    assert(unboxed2 == -100, "unboxed negative")

    // Array unboxing
    var arr: int32[] = {10, 20, 30}
    var boxed: any = arr
    var unboxed_arr: int32[] = boxed as int32[]
    assert(unboxed_arr.length == 3, "unboxed array length")
    assert(unboxed_arr[0] == 10, "unboxed array element 0")
    assert(unboxed_arr[2] == 30, "unboxed array element 2")

    print("   PASS\n")

// --- 12. Type Checking ---
fn test_type_checking(): void =>
    print("12. Type checking with 'is'\n")

    var x: int32 = 42
    var a: any = x

    assert(a is int32, "is int32 true")
    assert(!(a is int), "is int false")
    assert(!(a is double), "is double false")
    assert(!(a is str), "is str false")

    // Array type checking
    var arr: int32[] = {1, 2}
    var boxed: any = arr
    assert(boxed is int32[], "array is int32[]")
    assert(!(boxed is int[]), "array is not int[]")
    assert(!(boxed is uint32[]), "array is not uint32[]")

    print("   PASS\n")

// --- 13. Lambdas ---
fn test_lambdas(): void =>
    print("13. Lambdas\n")

    // Lambda with int32 parameter
    var double_it: fn(int32): int32 = fn(x: int32): int32 => x * 2
    assert(double_it(21) == 42, "lambda call")

    // Lambda with int32 return
    var get_value: fn(): int32 = fn(): int32 => 100
    assert(get_value() == 100, "lambda return")

    // Lambda with expression
    var add: fn(int32, int32): int32 = fn(a: int32, b: int32): int32 => a + b
    assert(add(10, 32) == 42, "lambda with two params")

    // Lambda capturing int32
    var base: int32 = 10
    var add_base: fn(int32): int32 = fn(x: int32): int32 => x + base
    assert(add_base(5) == 15, "lambda capture")

    // Higher-order with int32
    var apply: fn(fn(int32): int32, int32): int32 = fn(f: fn(int32): int32, x: int32): int32 => f(x)
    assert(apply(double_it, 21) == 42, "higher-order lambda")

    print("   PASS\n")

// --- 14. Functions ---
fn test_functions(): void =>
    print("14. Functions\n")

    assert(identity_int32(42) == 42, "identity function")
    assert(add_int32(10, 32) == 42, "add function")
    assert(multiply_int32(6, 7) == 42, "multiply function")
    assert(negate_int32(42) == -42, "negate function")

    // Function returning expression
    assert(compute_int32(10, 5, 2) == 30, "complex function")

    print("   PASS\n")

fn identity_int32(x: int32): int32 =>
    return x

fn add_int32(a: int32, b: int32): int32 =>
    return a + b

fn multiply_int32(a: int32, b: int32): int32 =>
    return a * b

fn negate_int32(x: int32): int32 =>
    return -x

fn compute_int32(a: int32, b: int32, c: int32): int32 =>
    return (a + b) * c

// --- 15. Control Flow ---
fn test_control_flow(): void =>
    print("15. Control flow\n")

    // If with int32 comparison
    var x: int32 = 50
    var result: int32 = 0
    if x > 40 =>
        result = 1
    else =>
        result = 0
    assert(result == 1, "if comparison")

    // While with int32 counter
    var count: int32 = 0
    var sum: int32 = 0
    while count < 5 =>
        sum = sum + count
        count = count + 1
    assert(sum == 10, "while loop") // 0+1+2+3+4=10

    // For loop skipped - int32[] not supported yet

    print("   PASS\n")

// --- 16. Edge Cases ---
fn test_edge_cases(): void =>
    print("16. Edge cases\n")

    // Zero operations
    var zero: int32 = 0
    assert(zero + zero == 0, "zero + zero")
    assert(zero * 100 == 0, "zero * n")

    // Division edge cases
    var hundred: int32 = 100
    assert(hundred / 100 == 1, "n / n")
    assert(hundred % 100 == 0, "n % n")

    // Large values
    var large: int32 = 1000000
    var result: int32 = large * 2
    assert(result == 2000000, "large multiplication")

    // Sign changes
    var pos: int32 = 50
    var neg: int32 = -50
    assert(pos + neg == 0, "pos + neg = 0")
    assert(pos * neg == -2500, "pos * neg")
    assert(neg * neg == 2500, "neg * neg")

    print("   PASS\n")
